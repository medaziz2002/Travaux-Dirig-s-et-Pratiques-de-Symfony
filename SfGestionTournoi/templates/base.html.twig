<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" type="text/css" href=" {{ asset("styles/button.css") }}">
        <link rel="stylesheet" type="text/css" href=" {{ asset("styles/form.css") }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <div class="scrolling-background"></div>
    <div class="scrolling"></div>
        {% block body %}
        {% endblock %}
    </body>
    <div id="flashes-container">
        <!-- Pour chaque message du type "success" -->
        {% for message in app.flashes('success') %}
            <span class="flashes flashes-success">{{ message }}</span>
        {% endfor %}
        <!-- Pour chaque message du type "error" -->
        {% for message in app.flashes('error') %}
            <span class="flashes flashes-error">{{ message }}</span>
        {% endfor %}
    </div>
</html>
<style>
    body {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh; /* Prend toute la hauteur de l'écran */
        margin: 0;
        padding: 20px;
        opacity: 0.9;
        font-family: monospace;
        overflow: auto; /* Permet le défilement */
        background-color: #4d38ff;
    }

    .scrolling-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('{{ asset("/img/soccer.png") }}');
        background-size: 300px 300px; /* Correspond aux dimensions de l'image */
        background-repeat: repeat; /* Répète l'image sans cassure */
        background-position: top left; /* Évite les décalages */
        animation: moveBackground 100s linear infinite;
        z-index: -1;
    }

    .scrolling {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(#8376ff, #4d38ff);
        z-index: -2;
    }

    @keyframes moveBackground {
        from {
            background-position: 0 0;
        }
        to {
            background-position: -483px -500px; /* Ajuste selon la taille réelle */
        }
    }

    .formLogout button {
        background: none;
        width: auto;
        margin: 0;
        padding: 0;
    }

    h1 {
        padding: 20px;
        font-family: monospace;
        background-color: white;
        width: 40%;
        border-radius: 5px;
        margin: auto;
        font-size: 30px;
        border: solid 5px black;
        box-shadow: 6px 6px 0 0 #00000057;
    }

</style>
