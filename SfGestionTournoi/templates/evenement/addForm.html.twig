{% extends 'base.html.twig' %}

{% block title %}Hello EvenementController!{% endblock %}

{% block body %}
        {{ form_start(form, {'attr': {'id': 'event-new'}}) }}
        <h2>Créer un événement</h2>
        <p>Nom</p>
        {{ form_widget(form.nom, {'attr': {"placeholder": "Nom de l'événement"}}) }}
        <p>Date Début</p>
        {{ form_widget(form.dateDeb, {'attr': {"placeholder": "Date de début"}}) }}
        <p>Date Fin</p>
        {{ form_widget(form.dateFin, {'attr': {"placeholder": "Date de fin"}}) }}
        {{ form_widget(form.valider, {'id': 'event-new-submit', 'attr': {"class": "event-add", "placeholder": "Créer"}}) }}
        <a href="{{ path('app_home') }}">
                <button class="event-delete">
                        Annuler
                </button>
        </a>
        {{ form_rest(form) }}
        {{ form_end(form) }}

        <style>
                h2 {
                        font-size: 30px;
                }

                input {
                        box-shadow: 4px 4px 0 0 #00000057;
                }

                form {
                        box-shadow: 6px 6px 0 0 #00000057;
                }
        </style>

{% endblock %}
